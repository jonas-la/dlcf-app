<head>
  <title>Event Schedule</title>
  <%= stylesheet_link_tag 'event_schedule', media: 'all' %> <!-- Include the desired stylesheet -->
</head>
<body>
    <div class="main-body-container">
        <div class="body-item header-container text-tile">
            <h1>Event Schedule</h1>
        </div>
        
        <div class="grid-item">
      <% @events.each do |event| %>
      <div class="center text-tile list-tile input-label">
        <%= render event %>
        
        <p>
           <%= link_to "Show this event", schedule_show_event_path(event), class: "link-button" %>
        </p>
      </div>
    <% end %>
    </div>
        <%
=begin%>
 <% @events.each do |event| %>
                   
                        <div class="text-tile body-item event-container grid-item">
                        <div>
                            <div class="input-label">Name</div>

                            <div class="input-label"><%= event.event_name %></div>
                            </div>

                            <div>
                             <div class="input-label">Date</div>
                            <div class="input-label"><%= event.start_time.strftime("%B %d, %Y %I:%M %p") %></div>
                            </div>

                            <div>
                             <div class="input-label">Location</div>
                            <div class="input-label"><%= event.location %></div>
                            </div>
                            <div>
                             <div class="input-label">Show event</div>
                                <%= link_to "Show this event", schedule_show_event_path(event), class: "link-button" %>
                            </div>
                        </div>
                    
                <% end %> 
<%
=end%>

        <div class="back-button">
            <% if @user == nil %>
                <%= link_to "Back", new_admin_session_path, class: "link-button"%> 
            <% elsif @user.is_admin %>
                <%= link_to "Back", officer_dashboard_index_path , class: "link-button"%>
            <% else %> 
                <%= link_to "Back", member_dashboard_index_path , class: "link-button"%>
            <% end %>
        </div>
    </div>
</body>
