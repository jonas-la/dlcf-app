<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Deeper Life Campus Fellowship</title>
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <div class="center text-tile mobile-container">
        <div class="grid-item">
            <h2>You're Logged into the Member Dashboard</h2>

            <div>
                <%= image_tag("/assets/dlcf_logo-d16a2c8a22ef43fb7d7e7459c93141037b0f19df65d9c82f1b23722bbf9dac6b.jpg", style: "width: 200px; height: 200px; margin: 20px") %>
            </div>
        </div>
        
        <div class="grid-item">
            <%= link_to "Events", member_index_events_path , class: "link-button"%>
            <%= link_to "Create Feedback", new_feedback_path,  class: "link-button" %>
            <%= link_to "Sign Out", destroy_admin_session_path , class: "link-button"%>
        </div>
        
        <div class="center text-tile grid-item">
            <span class="info-title"><%= @org_info.title%></span><br>

            <div class="list-tile">
                <span class="info-text"><%= @org_info.description %></span>
            </div>

            <div>
                <%= link_to "View Charter", "/assets/dlcf_charter-03398f43685a0a1c5ddbf44c7b6a9b495d9fdac7d632a91075699828d7a9423b.pdf", target: "_blank", class: "link-button", style: "margin: 20px" %>
            </div>

            <div>
                <%= link_to "Event Schedule", event_schedule_path, class: "link-button"%> 
            </div>
        </div>

        <div class="grid-item">
            <p class="info-text officer-title info-title ">Club Officers</p>
        </div>
        
        <div class="grid-item">
            <% @officers.each do |officer| %>
            <% if officer.preferred_name != "Test" %>
                <div class="center text-tile">
                    <div class="list-tile">
                        <span class="info-title"><%= officer.preferred_name%> <%= officer.last_name%></span>
                    </div>

                    <br>

                    <div class="list-tile">
                        <span class="info-text"><%= officer.bio %></span>
                    </div>
                </div>
            <% end %>
            <% end %>
        </div>
    </div>
</body>