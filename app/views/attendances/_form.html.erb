<%= form_with(model: attendance) do |form| %>

  <div class="info-text"> Name: <%= Event.find(params[:event_id]).event_name %> </div>

  <br>

  <div class="info-text"> Location: <%= Event.find(params[:event_id]).location %> </div>

  <br>

  <div class="info-text"> Start time: <%= Event.find(params[:event_id]).start_time.strftime("%B %d, %Y %I:%M %p") %> </div>

  <br>

  <div class="info-text"> End time: <%= Event.find(params[:event_id]).end_time.strftime("%B %d, %Y %I:%M %p") %> </div>

  <br>

  <div class="info-text"> Description: <%= Event.find(params[:event_id]).description %> </div>

  <br>

  <div> 
    <%= form.hidden_field :member_id, value: @user.id %>
  </div>

  <div>
    <%= form.hidden_field :event_id, value: params[:event_id] %>
  </div> 

  <div>
    <%= form.hidden_field :attended, value: true %>
  </div> 

  <div>
    <%= form.submit "Sign in", class:"link-button" %>
  </div>
<% end %>
