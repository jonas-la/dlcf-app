<%= form_with(model: pending_member) do |form| %>
  <% if pending_member.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(pending_member.errors.count, "error") %> prohibited this pending_member from being saved:</h2>

      <ul>
        <% pending_member.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :first_name, style: "display: block", class:"input-label" %>
    <%= form.text_field :first_name, class:"form-input" %>
  </div>

  <div>
    <%= form.label :preferred_name, style: "display: block", class:"input-label" %>
    <%= form.text_field :preferred_name, class:"form-input" %>
  </div>

  <div>
    <%= form.label :last_name, style: "display: block", class:"input-label" %>
    <%= form.text_field :last_name, class:"form-input" %>
  </div>

  <div>
    <%= form.label :email, style: "display: block", class:"input-label" %>
    <%= form.text_field :email, class:"form-input" %>
  </div>


  <div>
    <input type="checkbox" id="enableSubmit" class="checkbox" />
    <%= form.submit "Submit", disabled: true, id: "submitForm", class:"link-button" %>

  </div>

<% end %>

<script>
  const enableSubmitCheckbox = document.getElementById("enableSubmit");
  const submitButton = document.getElementById("submitForm");

  enableSubmitCheckbox.addEventListener("change", function() {
    submitButton.disabled = !this.checked;
  });
</script>
