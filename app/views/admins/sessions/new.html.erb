<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Deeper Life Campus Fellowship</title>
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <div class="center text-tile mobile-container">
        <div class="grid-item">
            <h1>Deeper Life Campus Fellowship</h1>

            <div>
                <% if  OmniAuth.config.test_mode == false %>
                <%= image_tag(@org_info.image, alt:"TEST", style: "width: 200px; height: 200px; margin: 20px") %>
                
                <% end %>
            </div>
        </div>

        <div class="grid-item">
            <%= button_to "Sign In", admin_google_oauth2_omniauth_authorize_path , class: "link-button"%>
            <%= link_to "Create Account", new_pending_member_path , class: "link-button"%>
        </div>
        
        <div class="center text-tile grid-item">
            <span class="info-title"><%= @org_info.title%></span>
            <br>

            <div class="list-tile">
                <span class="info-text"><%= @org_info.description %></span>
            </div>

            <div>
                <% if  OmniAuth.config.test_mode == false%>
                <%= link_to "View Charter", @org_info.file, target: "_blank", class: "link-button", style: "margin: 20px" %>
                <% end %>
            </div>

            <div>
                <%= link_to "Event Schedule", event_schedule_path, class: "link-button"%> 
            </div>
        </div>

        <div class="grid-item">
            <p class="info-text officer-title info-title ">Club Officers</p>
        </div>
        
        <div class="grid-item">
            <% @officers.each do |officer| %>
            <% if officer.preferred_name != "Test" %>
                <div class="center text-tile">
                    <div class="list-tile">
                        <span class="info-title"><%= officer.preferred_name%> <%= officer.last_name%></span>
                    </div>
                    <br>

                    <div class="list-tile">
                        <span class="info-text"><%= officer.bio %></span>
                    </div>
                </div>
            <% end %>
            <% end %>
        </div>
    </div>
</body>