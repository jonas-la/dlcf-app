      <th>Details</th>
      <!-- Add more table headers for additional member attributes -->
    </tr>
  </thead>
  <tbody>
    <% @members.each do |member| %>
      <% if member.is_member %>
        <tr>
          <td><%= member.first_name %></td>
          <td><%= member.preferred_name %></td>
          <td><%= member.last_name %></td>
          <td><%= member.email %></td>
          <td><%= member.role %></td>
          <td><%= link_to "More info", member, class: "link-button"%></td>
          <!-- Add more table cells for additional member attributes -->
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>

