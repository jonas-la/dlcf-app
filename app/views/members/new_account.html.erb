
<div class="center text-tile list-tile">
<%= form_with(model: @member, url: create_account_members_path) do |form| %>
  <% if @member.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
        <% @member.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.hidden_field :first_name, value: @pending_member.first_name %>
  </div>

  <div>
    <%= form.hidden_field :preferred_name_name, value: @pending_member.preferred_name %>

  </div>

  <div>
    <%= form.hidden_field :last_name, value: @pending_member.last_name %>

  </div>

  <div>
    <%= form.hidden_field :email, value: @pending_member.email %>

  </div>

  <div>
    <%= form.label "Officer", style: "display: block", class:"input-label" %>
    <%= form.check_box :is_admin, class:"checkbox" %>
  </div>

  <div>
    <%= form.label :role, style: "display: block", class:"input-label" %>
    <%= form.text_field :role, value: "Member", class:"form-input" %>
  </div>
  <%= form.hidden_field :is_member, value: true %>
  <%= form.hidden_field :bio, value: "" %>
  <%= form.hidden_field :contact, value: "" %>
  <%= form.hidden_field :photo_file_name, value: "" %>

  <div class="submit-form-button">
    <%= form.submit "Submit", class:"link-button" %>
  </div>
<% end %>


</div>

<div class="center bottom-navigation">
  <%= link_to "Back to login", root_path , class: "link-button"%>

</div>
