<%= form_for @member, url: create_account_members_path do |form| %>
  <% if member.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
        <% member.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name %>
  </div>

  <div>
    <%= form.label :preferred_name, style: "display: block" %>
    <%= form.text_field :preferred_name %>
  </div>

  <div>
    <%= form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  
    
  <%= form.hidden_field :is_member, value: true %>
  <%= form.hidden_field :is_admin, value: false %>
  <%= form.hidden_field :bio, value: "" %>
  <%= form.hidden_field :contact, value: "" %>
  <%= form.hidden_field :photo_file_name, value: "" %>
  <%= form.hidden_field :role, value: "" %>

  <div>
    <%= form.submit %>
  </div>
