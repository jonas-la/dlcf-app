<p style="color: green"><%= notice %></p>

<%= render @member %>

<div>
  <%= link_to "Edit this member", edit_member_path(@member) %> |
  <%= link_to "Back to members", members_path %>

  <%= button_to "Destroy this member", @member, method: :delete %>

  <!-- Events attended code/loop -->
  <p class="info-text officer-title info-title ">Events attended</p>
  <% @events_attended.each do |event| %>
    <div>
      <!-- Render event name and start time -->
      <%= "#{event.event_name} on #{event.start_time.strftime('%A, %B %d, %Y at %I:%M %p')}" %>
    </div>
  <% end %>
</div>
