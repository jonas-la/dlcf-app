<%= form_with(model: feedback) do |form| %>
  <% if feedback.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

      <ul>
        <% feedback.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :satisfaction, style: "display: block" %>
    <%= form.number_field :satisfaction %>
  </div>

  <div>
    <%= form.label :critiques, style: "display: block" %>
    <%= form.text_field :critiques %>
  </div>

  <div>
    <%= form.label :new_ideas, style: "display: block" %>
    <%= form.text_field :new_ideas %>
  </div>

  <div>
    <%= form.hidden_field :member_id, value: @user.id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
